<% cache ['homejulie', site, I18n.locale] do %>
<% 
  @portfolio ||= site.portfolio
  @projects ||= @portfolio.projects
  @theme_categories ||= @portfolio.categories.with_globalize.find_by_name("themes")
%>

<div id="project-wrapper">
  <%= render "throbber" %>
  <div id="project-container">
    <div class="video-container">
      <iframe src="//player.vimeo.com/video/93238059?color=1201ff&amp;title=0&amp;byline=0&amp;portrait=0&amp;autoplay=1&amp;loop=0" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
    </div>
  </div>
</div>
<% if @theme_categories.children.try(:any?) %>
<div class="container">
  <div class="row">
    <div class="col-sm-12">
    <a href="#" id="themes-dropdown" class="dropdown-toggle btn btn-primary btn-lg" data-toggle="dropdown" data-hover="dropdown" data-delay="1000" data-close-others="true">
      <span class="link-label"><%= @theme_categories.title %></span>&nbsp;<span class="caret"></span>
    </a>
    <ul href="#" class="dropdown-menu" role="menu">
      <li><%= link_to(t(:"custom.view_all_themes"), "#", :class => "filter", :data => { :filter => "all" }) %></li>
      <%= render :partial => "projects/category", 
          :collection => @theme_categories.children, 
          :as => :category %>
    </ul>
  </div>
  </div>
</div>
<% end %>

<div class="container">
  <div class="row projects">
    <%= render @projects, :as => :project %>
  </div> 
</div>
<% end %>