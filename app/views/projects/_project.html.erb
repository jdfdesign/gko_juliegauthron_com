<article class="col-xs-12 col-sm-6 col-md-4">
  <%= link_to(project.public_url, :class => "thumbnail thumbnail-project #{'active' if project.id == @project.id}", :data => { :remote => true }) do %>
    <% if !project.thumbnail.video_url.blank? %>
      <div class="thumbnail-vid">
        <iframe src="//player.vimeo.com/video/<%= project.thumbnail.video_url %>?title=0&amp;byline=0&amp;portrait=0&amp;autoplay=0&amp;loop=0" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
      </div>
    <% elsif project.thumbnail %>
      <%= content_tag(:div, :class => "thumbnail-img") do %>
        <%= image_tag(project.thumbnail.thumbnail(device_type == :desktop ? "450x325#" : "320x230#").url(), :alt => project.thumbnail.title, :class => "img-responsive" ) %>
      <% end %>
    <% end %>
    <div class="caption">
      <h3 class="thumbnail-heading"><%= project.title %></h3>
      <p class="thumbnail-meta"><%= project.preferred_release_date %></p>
    </div>
    <span class="border border-top"></span>
    <span class="border border-bottom"></span>
    <span class="border border-left"></span>
    <span class="border border-right"></span>
  <% end %>
</article>